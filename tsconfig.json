{
  "include": ["src/**/**/*"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "alwaysStrict": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",
    "typeRoots": ["./src/types/"]
  },
  "exclude": [
    "node_modules",
    "node_modules/**/*",
    "node_modules/**/**/*",
    "node_modules/**/**/**/*"
  ]
}
